<%= form_for [@room, @event] do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Title' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <input type="date" class="datepicker" name='event[starts_at]'/>
  </div>
  <div class="field">
    <%= f.label :starts_at %><br />
    <%= f.text_field :starts_at %>
  </div>
  <div class="field">
    <%= f.label :ends_at %><br />
    <%= f.text_field :ends_at %>
  <div class="field">
    <%= f.label :all_day %><br />
    <%= f.check_box :all_day %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>